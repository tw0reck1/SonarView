<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw0reck1.sonarapp.MainActivity">

    <tw0reck1.sonar.SonarView
        android:id="@+id/sonarview1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="12dp"
        app:sv_color="#0f0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:orientation="horizontal">

        <tw0reck1.sonar.SonarView
            android:id="@+id/sonarview2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sv_color="#f00"/>

        <tw0reck1.sonar.SonarView
            android:id="@+id/sonarview3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sv_color="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:orientation="horizontal">

        <tw0reck1.sonar.SonarView
            android:id="@+id/sonarview4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            app:sv_color="#ff0"/>

        <tw0reck1.sonar.SonarView
            android:id="@+id/sonarview5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:sv_color="#0ff"/>

        <tw0reck1.sonar.SonarView
            android:id="@+id/sonarview6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            app:sv_color="#f0f"/>

    </LinearLayout>

</LinearLayout>